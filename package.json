{
  "name": "workspaces-mcp-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:dxt": "tsx scripts/build-dxt.ts",
    "dev": "tsx scripts/dev.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:ui": "vitest --ui",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\" --cache",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,tsx}\" --fix --cache",
    "format": "prettier --write . --cache",
    "format:check": "prettier --check . --cache",
    "typecheck": "tsc --noEmit --composite false",
    "typecheck:watch": "tsc --noEmit --watch --composite false",
    "clean": "rimraf packages/*/dist dist/ *.tgz node_modules/.cache",
    "clean:deps": "rimraf node_modules packages/*/node_modules",
    "release": "tsx scripts/release.ts",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "ci": "run-s typecheck lint ci:test build",
    "ci:test": "npx vitest run --exclude=\"**/logger.test.ts\" --exclude=\"**/index.test.ts\" --exclude=\"**/mcp-protocol.test.ts\"",
    "test:all": "tsx scripts/test-all.ts",
    "validate:release": "tsx scripts/validate-release.ts",
    "dev:mcp": "tsx watch packages/mcp-server/src/index.ts",
    "dxt:build": "dxt pack .",
    "dxt:package": "run-s build dxt:install dxt:build"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@changesets/cli": "^2.27.8",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "npm-run-all2": "^6.2.3",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.4",
    "semantic-release": "^24.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/dxt": "^0.2.6"
  }
}
