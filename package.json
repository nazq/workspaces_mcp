{
  "name": "workspaces-mcp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "workspaces-mcp-server": "./dist/bin/server.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dxt:build": "tsx scripts/build-dxt.ts",
    "dxt:package": "npm run build && npm run dxt:build",
    "dev": "tsx scripts/dev.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --cache",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix --cache",
    "format": "prettier --write . --cache",
    "format:check": "prettier --check . --cache",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist/ *.tgz node_modules/.cache",
    "clean:deps": "rimraf node_modules",
    "release": "tsx scripts/release.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "chokidar": "^4.0.1",
    "fs-extra": "^11.2.0",
    "tslog": "^4.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.1.19",
    "@changesets/cli": "^2.27.10",
    "@eslint/compat": "^1.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "audit-ci": "^7.1.0",
    "commander": "^12.1.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.{ts,js}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
